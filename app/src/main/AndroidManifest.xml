<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vinachos">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.vinachos"
        tools:targetApi="31">

        <activity
            android:name=".EscuchaPorMiActivity"
            android:exported="false"
            android:label="@string/title_activity_escucha_por_mi"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".BuscarDispositivoActivity"
            android:exported="false"
            android:label="@string/title_activity_buscar_dispositivo"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".EscribirYHablarActivity"
            android:exported="false"
            android:label="@string/title_activity_escribir_yhablar"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".CambioPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_cambio_password"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".OlvidasteActivity"
            android:exported="false"
            android:label="@string/title_activity_olvidaste"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".RegistrarseActivity"
            android:exported="false"
            android:label="@string/title_activity_registrarse"
            android:theme="@style/Theme.vinachos" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.vinachos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.vinachos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
